{
  "dashboard": {
    "id": null,
    "uid": "gateway-performance",
    "title": "Gateway Performance Dashboard",
    "tags": ["gateway", "performance", "slo"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Request Latency P95 (SLO: <50ms)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(gateway_request_duration_ms_bucket[5m])) by (le, endpoint))",
            "legendFormat": "{{endpoint}} - P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(gateway_request_duration_ms_bucket[5m])) by (le, endpoint))",
            "legendFormat": "{{endpoint}} - P99",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Request Rate by Endpoint",
        "targets": [
          {
            "expr": "sum(rate(gateway_requests_total[5m])) by (endpoint, status)",
            "legendFormat": "{{endpoint}} ({{status}})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "Rate Limit Hits by Organization",
        "targets": [
          {
            "expr": "sum(rate(gateway_rate_limit_hits_total[5m])) by (organization_id, limit_type)",
            "legendFormat": "{{organization_id}} - {{limit_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        },
        "alert": {
          "name": "High Rate Limit Hit Rate",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [100]},
              "query": {"params": ["A", "5m", "now"]}
            }
          ]
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "stat",
        "title": "Active Connections",
        "targets": [
          {
            "expr": "sum(gateway_active_connections) by (connection_type)",
            "legendFormat": "{{connection_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "type": "graph",
        "title": "Authentication Failures",
        "targets": [
          {
            "expr": "sum(rate(gateway_auth_failures_total[5m])) by (reason)",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        },
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "type": "graph",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "sum(rate(gateway_cache_hits_total[5m])) by (cache_type) / (sum(rate(gateway_cache_hits_total[5m])) by (cache_type) + sum(rate(gateway_cache_misses_total[5m])) by (cache_type)) * 100",
            "legendFormat": "{{cache_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "type": "graph",
        "title": "Kafka Producer Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(gateway_kafka_producer_latency_ms_bucket[5m])) by (le, topic))",
            "legendFormat": "{{topic}} - P95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "graph",
        "title": "Usage Recording Success Rate",
        "targets": [
          {
            "expr": "sum(rate(gateway_usage_recorded_total[5m])) / (sum(rate(gateway_usage_recorded_total[5m])) + sum(rate(gateway_usage_recording_errors_total[5m]))) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          },
          {
            "expr": "sum(rate(gateway_usage_recording_errors_total[5m])) by (error_type)",
            "legendFormat": "Errors: {{error_type}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"}
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "graph",
        "title": "Database Query Performance",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(gateway_db_query_duration_ms_bucket[5m])) by (le, query_type))",
            "legendFormat": "{{query_type}} - P95",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 25, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"}
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 32},
        "type": "stat",
        "title": "Concurrent Requests",
        "targets": [
          {
            "expr": "gateway_concurrent_requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 500, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "auto"
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 32},
        "type": "stat",
        "title": "Error Rate (5xx)",
        "targets": [
          {
            "expr": "sum(rate(gateway_requests_total{status=~\"5..\"}[5m])) / sum(rate(gateway_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "auto"
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 32},
        "type": "stat",
        "title": "API Key Validation Success Rate",
        "targets": [
          {
            "expr": "sum(rate(gateway_api_key_validations_total{result=\"success\"}[5m])) / sum(rate(gateway_api_key_validations_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "auto"
        }
      },
      {
        "id": 13,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 32},
        "type": "stat",
        "title": "Average Response Size",
        "targets": [
          {
            "expr": "avg(rate(gateway_response_size_bytes_sum[5m]) / rate(gateway_response_size_bytes_count[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "decimals": 2
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "auto"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "organization",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(gateway_requests_total, organization_id)",
          "multi": true,
          "includeAll": true
        },
        {
          "name": "endpoint",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(gateway_requests_total, endpoint)",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
